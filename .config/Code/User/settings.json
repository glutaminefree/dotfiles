{
    "editor.tabSize": 2,
    "editor.autoClosingBrackets": "always",
    "editor.autoClosingQuotes": "always",
    "editor.tabCompletion": "on",

    "workbench.colorTheme": "Braver's Solarized Light (themed workbench)",
    "workbench.iconTheme": "vscode-icons",

    "window.menuBarVisibility": "toggle",
    "vsicons.dontShowNewVersionMessage": true,

    "editor.rulers": [
        {
            "column": 100,
            "color": "#eee8d5"
        }
    ],
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "entity.other.attribute-name.class.pug",
                "settings": {
                    "foreground": "#9e8917"
                }
            }
        ]
    },
    "files.insertFinalNewline": true,

    "vim.hlsearch": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "%"],
            "commands": ["editor.emmet.action.matchTag"]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": ["="],
            "commands": ["editor.action.reindentselectedlines"]
        },
        {
            "before": ["<leader>", "y"],
            "commands": ["editor.action.clipboardCopyAction"],
        }
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": ["<C-j>"],
            "after": ["<Esc>"]
        }
    ],
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": ["<C-p>"],
            "commands": ["editor.action.clipboardPasteAction"]
        }
    ],

    "multiCommand.commands": [
        {
            "command": "multiCommand.vimPaste",
            "sequence": [
                "extension.vim_ctrl+r",
                {"command": "type", "args": {"text": "\""}}
            ]
        }
    ],

    "git.confirmSync": false,
    "editor.smoothScrolling": true,
    "remote.SSH.maxReconnectionAttempts": 8,
    "workbench.editor.decorations.colors": true,
    "explorer.confirmDragAndDrop": false,
    "files.enableTrash": false,
    "explorer.confirmDelete": false,
    "vim.foldfix": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "search.exclude": {
        "**/.git": true,
        "**/.nuxt": true,
        "**/*.code-search": false,
        "**/bower_components": false,
        "**/dist": true
    },
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.defaultProfile.linux": "zsh",
    "editor.cursorStyle": "line",
    "editor.lineNumbers": "on",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "off",
    "terminal.integrated.profiles.linux": {
        "/bin/sh (migrated)": {
            "path": "/bin/sh",
            "args": []
        }
    },
    "workbench.tree.indent": 2,
    "editor.guides.bracketPairs": true,
    "editor.guides.bracketPairsHorizontal": false,
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.fontFamily": "'Ubuntu Mono', 'Droid Sans Mono', 'monospace', monospace",
    "editor.fontSize": 16,
    "terminal.integrated.fontSize": 16,
    "vetur.experimental.templateInterpolationService": true
}
