[
  {
    "key": "ctrl+p",
    "when": "editorTextFocus && vim.active && vim.mode == 'Insert'",
    "command": "extension.multiCommand.execute",
    "args": { "command": "multiCommand.vimPaste" }
  },
  {
    "key": "f3",
    "when": "editorTextFocus && vim.active && vim.mode == 'Visual'",
    "command": "editor.action.addSelectionToNextFindMatch"
  },
  {
    "key": "ctrl+m a",
    "when": "!editorTextFocus && explorerResourceIsFolder && vim.active",
    "command": "explorer.newFile"
  },
  {
    "key": "ctrl+m shift+a",
    "when": "!editorTextFocus && explorerResourceIsFolder && vim.active",
    "command": "explorer.newFolder"
  },
  {
    "key": "ctrl+m c",
    "when": "!editorTextFocus && filesExplorerFocus && vim.active",
    "command": "extension.multiCommand.execute",
    "args": {
      "sequence": ["filesExplorer.copy", "filesExplorer.paste"]
    }
  },
  {
    "key": "ctrl+m d",
    "when": "!editorTextFocus && filesExplorerFocus && vim.active",
    "command": "deleteFile"
  }
]
